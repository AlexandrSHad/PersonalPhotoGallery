@model PhotoUploadViewModel

@{
    ViewBag.Title = "Upload";
}

<h2>Upload</h2>

<form method="post" asp-controller="Photos" asp-action="Upload" enctype="multipart/form-data">
    <div class="form-horizontal">
        <p>
            Please choose the picture
        </p>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="File" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="File" class="form-control" placeholder="email@example.com" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10 col-md-offset-2">
                <input type="submit" class="btn btn-default" value="Upload" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
